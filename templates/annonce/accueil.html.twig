{% block body %}

    {% for notification in app.flashes('success') %}
        <div class="col-md-6 mx-auto text-center alert alert-success">{{ notification }}</div>
    {% endfor %}
                        
        <div class="main">
            <div class="section top row"  >
                {# 1ere box - Mon formulaire filtre #} 
                <div class="gris">
                    <div class="row" style="height:auto">
                        <div class="left col-xl-lg-2 col-sm-md-10 " style= "min-width: 258.98px;max-width:300px;max-height:550px;margin: 0 auto;margin-bottom: 1em;margin-top: 3em;">
