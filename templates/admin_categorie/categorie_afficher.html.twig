{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Gestion des catégories{% endblock %}

{% block h1 %}Gestion des catégories{% endblock %}


{% block body %}

    <a class="btn btn-success m-2" href="{{ path("categorie_ajouter") }}">Ajouter une catégorie</a>

    {% for notification in app.flashes('success') %}
        <div class="col-md-6 mx-auto text-center alert alert-success">{{ notification }}</div>
    {% endfor %}

    {% if categories %}

        <table class="table table-hower table-striped text-center mt-3">
        
            <thead class="bg-dark text-white">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
        
            <tbody>
            
                {% for categorie in categories %}
                    
                    <tr>
                    
                        <td>{{ categorie.id }}</td>

                        <td>{{ categorie.type }}</td>

                        <td>
                            <a href="{{ path('categorie_modifier' ,  {'id' : categorie.id} ) }}">
                                <img src="{{ asset('images/update.png')}}" alt="">
                            </a>
                        </td>

                        <td>
                          <a href="{{ path('categorie_supprimer' ,  {'id' : categorie.id} ) }}">

                                <img src="{{ asset('images/delete.png')}}" alt="">
                            </a>
                        </td>
                    
                    </tr>

                {% endfor %}
            
            </tbody>
        
        </table>

    {% else %}
        <h4 class="text-danger text-center fst-italic mt-3">Il n'y a aucune catégorie pour le moment</h4>
    {% endif %}

{% endblock %}